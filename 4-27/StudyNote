const lovePosture=['åå…¥(è·ª)','æ‰¬æ——','å¥³ä¸Šä½','ä¾§å…¥å¼','æ’é’Ÿ','æ‘‡èˆ¹','çŠ¬äº¤','èŠ±æ”€æ','å ç“¦']
const duringTime=['5','10','15'];

const selected=[{
    selectedPosture:'åå…¥',
    selectedTime:'15'
}];




//åŠŸèƒ½å¢åŠ :ä¿ç•™ä¸Šä¸€æ¬¡çš„ç»“æœ,å¢åŠ åˆ é™¤åŠŸèƒ½,é‚£ä¹ˆå°±éœ€è¦æŠŠå±•ç¤ºå’ŒæŠ½å–åˆ†å¼€,é¿å…ä¸€æ¬¡æŠ½å‡ºå¤šä¸ª,å¹¶åœ¨å±•ç¤ºåŠŸèƒ½æ·»åŠ forå¾ªç¯.

function selectionTest(){

    //ç”Ÿæˆéšæœºæ•°
    const postureRandom=Math.floor(Math.random() * lovePosture.length);
    const timeRandom=Math.floor(Math.random() * duringTime.length);

    //é€‰ä¸­çš„é¡¹ç›®å’Œæ—¶é—´
    const selectedPosture=lovePosture[postureRandom];//é€‰ä¸­çš„
    const selectedTime=duringTime[timeRandom];

    //é€‰ä¸­ä¹‹åæŠŠè¿™äº›å­˜å…¥æ•°ç»„
    selected.push({
        selectedPosture,
        selectedTime,
    })


    //è¾“å‡º
    showSelection();
}



//è¿›è¡Œè¾“å‡º,ç”¨forå¾ªç¯è¿›è¡Œè¾“å‡º,
function showSelection(){
    const {selectedPosture,selectedTime}=selected;


    //å¾ªç¯çš„ç›®çš„æ˜¯é‡ç½®ä¸Šä¸€æ¬¡çš„ç»“æœ,å¹¶ä¸”è¾“å‡ºä¿å­˜ç»“æœæ•°ç»„

    let loveHtml;
    for ( let i = 0; i < lovePosture.length; i++ ) {
        loveHtml = "";

        //è§£æ„å¯¹è±¡
        const {selectedPosture, selectedTime} = selected;


        const html = `
            <div>æ­å–œğŸ‰ä½ æŠ½ä¸­äº† ${selectedPosture} æ—¶é—´æ˜¯${selectedTime}åˆ†é’Ÿå“¦~~åŠ æ²¹å–µå–µå–µ</div>
        `;
        loveHtml += html;
    }
    console.log(loveHtml);

    document.querySelector('.show-selection').innerHTML=loveHtml;
}
